@model BookStore.Domain.DomainModels.Order

<div class="container">
    <h2>Books in order with id @Model.Id</h2>
    <div>
        <a class="btn btn-success">Order for @Model.User.Email</a>
    </div>
    @for (int i = 0; i < Model.BooksInOrder.Count(); i++)
    {
        var item = Model.BooksInOrder.ElementAt(i).Book;

        if (i % 3 == 0)
        {
            @:<div class="row">
            }


            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" src="@item.BookImage" style="height: 50%" alt="Image for book!" />

                    <div class="card-body">
                        <h3 class="card-title">@item.BookName @item.BookYear</h3>
                        <p class="card-text">@item.BookGenre</p>
                        <p class="card-text">Description: @item.BookDescription</p>
                     
                        <h6>Price: @item.BookPrice</h6>
                    </div>
                </div>
            </div>
            if (i % 3 == 2)
            {
            @:</div>
        }
    }
</div>